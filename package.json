{
	"name": "simple-bible-reader",
	"version": "1.0.0",
	"description": "What I want a Bible reader to be.",
	"type": "module",
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": ">=24"
	},
	"imports": {
		"#lib/*": "./lib/*",
		"#component/*": "./client/component/*"
	},
	"scripts": {
		"ci:test": "npm t",
		"prep-build": "run-p glob generate:*",
		"copy:public": "node copy_public_to_build.ts",
		"build": "npm-run-all prep-build copy:public --parallel build:*",
		"build:js": "node esbuild.config.ts",
		"build:worker": "node esbuild.worker.ts",
		"watch:js": "node esbuild.config.ts --watch",
		"watch:glob": "watch \"npm run glob\" client/service client/view",
		"generate:books": "node generation-scripts/generate-books-for-display/index.js",
		"glob": "run-p glob:*",
		"glob:services": "glob-module-file --pattern=\"client/service/**/*.ts\" --format=es --pathPrefix=../ --outputPath=client/globbed_services.ts",
		"glob:views": "glob-module-file --pattern=\"client/view/**/*.ts\" --format=es --pathPrefix=../ --outputPath=client/globbed_views.ts",
		"dev:worker:build": "node esbuild.worker.ts --watch",
		"dev:worker:serve": "wrangler pages dev build --port=8788",
		"dev:worker": "run-p dev:worker:*",
		"dev:setup_local_wrangler": "node setup_local_wrangler.ts",
		"dev:open_browser": "open http://localhost:8788",
		"dev": "cross-env NODE_ENV=development npm-run-all prep-build copy:public --parallel watch:* dev:worker:serve",
		"test": "run-p test:*",
		"test:types:svelte": "svelte-check --no-tsconfig --fail-on-warnings",
		"test:types:everything_else": "tsc --noEmit",
		"test:types:worker": "tsc -p worker --noEmit",
		"test:types": "run-s -c test:types:*",
		"test:unit": "node --test --test-reporter=tap --test-name-pattern=\"client/.*/.*-test.ts\"",
		"regenerate_worker_types": "wrangler types ./worker/worker_types.d.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TehShrike/simple-bible-reader.git"
	},
	"keywords": [
		"bible",
		"book",
		"reader",
		"canon"
	],
	"author": "TehShrike",
	"license": "WTFPL",
	"bugs": {
		"url": "https://github.com/TehShrike/simple-bible-reader/issues"
	},
	"homepage": "https://github.com/TehShrike/simple-bible-reader#readme",
	"devDependencies": {
		"@types/node": "^24.10.1",
		"esbuild": "^0.27.0",
		"esbuild-svelte": "^0.9.3",
		"key-master": "^3.1.0",
		"live-server": "^1.2.2",
		"svelte-check": "^4.3.4",
		"typescript": "^5.7.2",
		"watch": "1.0.2",
		"wrangler": "^4.60.0"
	},
	"dependencies": {
		"abstract-state-router": "^8.0.6",
		"asr-scroll-position": "1.1.0",
		"books-of-the-bible": "^2.0.0",
		"chromatism2": "3.0.2",
		"click-should-be-intercepted-for-navigation": "^1.0.0",
		"cross-env": "5.1.3",
		"del-cli": "^1.1.0",
		"glob-module-file": "2.2.0",
		"hash-brown-router": "^3.4.0",
		"iso-next-tick": "1.0.0",
		"just-range": "2.0.0",
		"just-to-string": "1.0.0",
		"make-dir": "1.2.0",
		"make-dir-cli": "^1.0.0",
		"mannish": "^4.0.1",
		"multi-part-range-compare": "1.0.3",
		"npm-run-all": "4.1.2",
		"pify": "3.0.0",
		"regex-fun": "2.0.2",
		"revelation": "2.0.7",
		"sausage-router": "^1.1.2",
		"svelte": "^5",
		"svelte-state-renderer": "^6.0.0",
		"verse-reference-regex": "1.3.0",
		"world-english-bible": "1.0.0"
	}
}
